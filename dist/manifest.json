{
    "manifest_version": 3,
    "name": "ClipBook AI",
    "version": "1.0.0",
    "description": "ClipBook AI Extension",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://api.openai.com/*",
        "https://api.anthropic.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}