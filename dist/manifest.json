{
    "manifest_version": 3,
    "name": "ClipBook - Smart Researcher v1.0",
    "version": "1.0.0",
    "description": "ClipBook AI Extension",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://api.openai.com/*",
        "https://api.anthropic.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}